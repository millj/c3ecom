
<header class="navbar navbar-fixed-top">
  <a class="brand">Cosmetics Cubed</a>
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "c3ecom", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Item Info", items_path %></li>
          <li><%= link_to "Scan Info", fct_store_pick_scans_path %></li>
          <% if demand_user? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Demand Functions <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Truncate tables", truncate_path %></li>
                  <li><%= link_to "Load tables", load_path %></li>
                  <li class="divider"></li>
                </ul>
              </li>
          <% end %>
          <% if customer_service_user? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Customer Service <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Ecommerce Order # lookup", sales_order_path %></li>
                  <li><%= link_to "Manual Connotes", '#' %></li>
                </ul>
              </li>
          <% end %>
          <% if direct_user? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Direct Functions <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Location to Item Maintenance", direct_bin_contents_path %></li>
                  <li><%= link_to "Pick Path Maintenance", pick_paths_path %></li>
                  <li><%= link_to "Basket Maintenance", baskets_path %></li>
                  <li><%= link_to "Allocation Orders", allocation_orders_url %></li>
                  <li><%= link_to "Gift Cards", giftcard_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Allocation", allocate_path %></li>
                  <li><%= link_to "Orders to pack", selection_path %></li>
                </ul>
              </li>
          <% end %>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
