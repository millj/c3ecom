<% provide(:title, 'Special Instructions') %>
<h1>Special Instructions</h1>


<form class="form-horizontal">
  <fieldset>

    <!-- Form Name -->
    <legend>Filters</legend>

    <!-- Search input-->
    <div class="control-group">
      <label class="control-label" for="search"> SSCC or Order #</label>
      <div class="controls">
        <input id="search" name="search" class="input-medium search-query" type="text" autofocus="true">
      </div>
    </div>

  </fieldset>
</form>

<%= will_paginate %>

<ul class="users">
  <table class="table table-striped">
    <tr>
      <th> Order # </th>
      <th> Priority </th>
      <th> Special Instructions </th>
      <th> SSCC # </th>
    </tr>

  <% @fct_special_instructions.each do |special_instr| %>
      <tr>
        <td><%= special_instr.order_number %></td>
        <td><%= special_instr.priority %></td>
        <td><%= special_instr.delivery_instructions %></td>
        <td><%= special_instr.sscc %></td>
      </tr>
  <% end %>
  </table>
</ul>

<%= will_paginate %>