<% provide(:title, 'CFC A1w Orders') %>
<h1>CFC A1w Orders</h1>


<form class="form-horizontal">
  <fieldset>

    <!-- Form Name -->
    <legend>Filters</legend>

    <!-- Search input-->
    <div class="control-group">
      <label class="control-label" for="search">Scan SSCC or enter Order #</label>
      <div class="controls">
        <input id="search" name="search" class="input-medium search-query" type="text" autofocus="true">
      </div>
    </div>

  </fieldset>
</form>

<%= will_paginate %>

<ul class="users">
  <table class="table table-striped">
    <tr>
      <th> Order # </th>
      <th> Priority </th>
      <th> Special Instructions </th>
    </tr>

  <% @mb_order_status_a1ws.each do |mb_order| %>
      <tr>
        <td><%= mb_order.order_number %></td>
        <td><%= mb_order.priority %></td>
        <td><%= mb_order.delivery_instructions %></td>
      </tr>
  <% end %>
  </table>
</ul>

<%= will_paginate %>